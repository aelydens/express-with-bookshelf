extends ../layout
block content
  h1(class='page-header') Fabric Inventory
  p I'm here

  table(class='table')
    thead
      th Name
      th Content
      th Width
      th Yardage
      th Domestic?
    tbody
      each fabric in fabrics
        tr
          td= fabric.name
          td= fabric.content
          td= fabric.width
          td= fabric.yardage
          td #{fabric.domestic}
